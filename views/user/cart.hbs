<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
{{!-- sweet alert cdn link  --}}
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  toastr.options = {
      "progressBar": true,
      "positionClass": "toast-bottom-center",
      "timeOut": "2000",
      "hideDuration": "1",
    }
  $("#address").submit((e) => {
    e.preventDefault();
    let total = $("#total").text()
    if(total <= 0){
      Swal.fire({
          icon: 'error',
          title: 'Oops...',
          text: "The cart is empty",
        }).then((state) => {
          state.isConfirmed ? location.href = '/cart' : null;
        })
        return false;
    }
    $.ajax({
      url: "/checkStock",
      data: {},
      method: "GET",
      success: function(data) {
        window.location.href = "/address"
      }, error: function (err) {
        err = jQuery.parseJSON(err.responseText);
        Swal.fire({
          icon: 'error',
          title: 'Oops...',
          text: err.message,
        }).then((state) => {
          state.isConfirmed ? location.href = '/cart' : null;
        })
      }
    })
  })
function changeQuantity(cartId, productId, userId, count) {
    let val = document.getElementById(productId).value;
    val = parseInt(val);
    count = Number(count);
    $.ajax({
        url: "/cart/changeQuantity",
        data: {
            cart: cartId,
            user: userId,
            product: productId,
            count: count
        },
        method: "POST",
        success: function(data) {
          console.log(data )
            //$("#sub_total").text(data.total.total_max);
            //$("#total").text(data.total.total_amount);
            //$("#discount").text(data.total.total_discount);
            getTotalAmount()
            val = val + count;
            document.getElementById(productId).value = val;
            if (val <= 1) {
                //document.getElementById(`${productId}${cartId}`).disabled = true;
                $(`#${productId}${cartId}`).attr("disabled", true);
            } else {
                $(`#${productId}${cartId}`).attr("disabled", false);
            }
        },
        error: function(err) {}
    })
}
function removeFromCart(cartId, productId) {
  toastr.options = {
      "progressBar": true,
      "positionClass": "toast-bottom-center",
      "timeOut": "2000",
      "hideDuration": "1",
    };
    $.ajax({
        url: "/cart/remove",
        data: {
            cart: cartId,
            product: productId,
        },
        method: "POST",
        success: function(data) {
          //removeFromWishlist(productId);
          $(`#div${productId}`).remove();
          getTotalAmount()
          toastr.success('Product removed successfully.');
        },
        error: function(err) {}
    })
}
 function addToWishlist(productId){
    $.ajax({
      url: "/wishlist/add",
      method: "POST",
      data: {
        productId: productId
      },
      success: function(data){
        toastr.success('Successfully added to the Wishlist')
        //window.location.reload();
        $(`#wish_icon_${productId}`).removeClass()
        $(`#wish_icon_${productId}`).addClass("fa-solid fa-heart fs-5 me-3 text-danger")
        $(`#wish_icon_${productId}`).attr("onclick",`removeFromWishlist('${productId}')`);
      },error: function (err) {
        console.log(err);
      }
    })
  }
  function removeFromWishlist(productId) {
    $.ajax({
      type: "POST",
      url: "/wishlist/remove",
      data: {
        productId: productId
      },
      success: function(data) {
        toastr.success('Successfully removed from Wishlist')
        $(`#wish_icon_${productId}`).removeClass()
        $(`#wish_icon_${productId}`).addClass("fa-regular fa-heart fs-5 me-3 ")
        $(`#wish_icon_${productId}`).attr("onclick",`addToWishlist('${productId}')`);
      },
      error: function(data) {
        console.log(data);
      }
    })
  }
 function getTotalAmount() {
    $.ajax({
      type: "GET",
      url: "/cart/total",
      success: function(data) {
        $("#sub_total").text(data.total_max)
        $("#discount").text(data.total_discount)
        $("#total").text(data.total_amount)
        console.log(data);
      },
      error: function(data) {
        console.log(data);
      }
    })
  }
</script>