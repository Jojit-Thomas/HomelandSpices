<div class="container-fluid h-100">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-12">
      <div class="card border border-0">
        <div class="card-body p-0">
          <div class="row g-0">
            <div class="col-lg-9 col-sm-12 col-12 outer">
              <div class="outer">
                <div
                  class="d-flex justify-content-between align-items-center mb-5"
                >
                  <h1 class="fw-bold mb-0 text-black">Orders</h1>
                  <h6 class="mb-0 text-muted">{{orders.length}} items</h6>
                </div>
                <hr class="my-4" />
                {{#each orders}}
                  <div class="d-flex">
                    <div
                      class="col-sm-4 col-md-4 col-lg-5 col-xl-3 col-4 m-auto"
                    >
                      <img
                        src="/product_images/{{this.productDetails._id}}.{{this.productDetails.img_ext}}"
                        class="imgCrop m-auto ms-4 proImg"
                        class="card-img-bottom"
                        alt="product Image"
                      />
                    </div>
                    <div
                      class="d-flex justify-content-between col-8 col-sm-8 flex-wrap my-auto"
                    >
                      <div
                        class="col-10 col-sm-6 col-md-10 col-lg-10 col-xl-5 my-auto"
                      >
                        <a href="/orders/details/{{this._id}}/{{this.productDetails._id}}" class="text-decoration-none"><h5
                          class="text-dark  title"
                        >{{this.productDetails.title}}</h5></a>
                        <p
                          class="text-muted mb-0 desc"
                        >{{this.productDetails.desc}} <br>Purchased On : {{this.date}}</p>
                      </div>
                      <div
                        class="col-sm-2 col-md-4 col-lg-4 col-xl-2 my-auto d-none d-lg-block"
                      >
                        <h6 class="mb-0">â‚¹{{this.products.total}}</h6>
                      </div>
                      <div
                        class="col-sm-2 col-md-4 col-lg-4 col-xl-2 my-auto d-none d-lg-block"
                      >
                        <h6 class="mb-0">{{this.products.status}}</h6>
                      </div>
                      <i class="fa-solid fa-angle-right d-block d-lg-none col-sm-2 col-md-2 col-lg-2 col-xl-2 my-auto"></i>
                    </div>
                  </div>
                  <hr class="my-4" />
                {{/each}}

                <div class="pt-5">
                  <h6 class="mb-0"><a href="/" class="text-body"><i
                        class="fas fa-long-arrow-alt-left me-2"
                      ></i>Back to shop</a></h6>
                </div>
              </div>
