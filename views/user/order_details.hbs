                    <div
                      class="col-12 col-sm-5 col-md-6 col-lg-6 col-xl-5 col-xxl-4 my-auto address"
                    >
                      <h5 class="text-dark title">{{this.address.name}}</h5>
                      <p
                        class="text-muted mb-0 desc"
                      >{{this.address.houseName}},
                        {{this.address.postOffice}}
                        P.O.,
                        {{this.address.locality}},
                        {{this.address.city}},
                        {{this.address.landmark}}, Pincode :
                        {{this.address.pincode}}</p>
                      <small>Phone : {{this.address.phone}}</small>

                    </div>
                    <div
                      class="col-12 col-sm-3 col-md-3 col-lg-3 col-xl-3 col-xxl-3 my-auto paymentMethod"
                    >
                      <h6 class="mb-0"><strong>Payment Method:</strong>
                        <br />{{this.paymentMethod}}</h6>
                    </div>
                  </div>
                  <hr class="my-4" />
                  {{! ==========================================ORDER DETAILS ========================================== }}
                  <div class="d-flex">
                    <div
                      class="col-sm-4 col-md-4 col-lg-5 col-xl-3 col-4 m-auto"
                    >
                      <a
                        href="/product/{{this.productDetails._id}}"
                        class="text-decoration-none"
                      ><img
                          src="/product_images/{{this.productDetails._id}}.{{this.productDetails.img_ext}}"
                          class="imgCrop m-auto ms-4 proImg"
                          class="card-img-bottom"
                          alt="product Image"
                        /></a>
                    </div>
                    <div
                      class="d-flex justify-content-between col-8 col-sm-8 flex-wrap my-auto"
                    >
                      <div
                        class="col-10 col-sm-6 col-md-10 col-lg-10 col-xl-5 my-auto"
                      >
                        <a
                          href="/product/{{this.productDetails._id}}"
                          class="text-decoration-none"
                        ><h5
                            class="text-dark title"
                          >{{this.productDetails.title}}</h5></a>
                        <a
                          href="/product/{{this.productDetails._id}}"
                          class="text-decoration-none"
                        ><p
                            class="text-muted mb-0 desc"
                          >{{this.productDetails.desc}}</p></a>
                        <small class="text-muted mb-0 desc">Return eligible
                          through 06-OCT-2023</small>
                      </div>
                      <div
                        class="col-sm-2 col-md-4 col-lg-4 col-xl-2 my-auto d-none d-lg-block"
                      >
                        <h6 class="mb-0">â‚¹{{this.products.total}}</h6>
                      </div>
                      <div
                        class="col-sm-2 col-md-4 col-lg-4 col-xl-2 my-auto d-none d-lg-block"
                      >
                        <h6 class="mb-0">{{this.products.status}}</h6>
                      </div>
                      <i
                        class="fa-solid fa-angle-right d-block d-lg-none col-sm-2 col-md-2 col-lg-2 col-xl-2 my-auto"
                      ></i>
                    </div>
                  </div>
                  <hr class="my-4" />
                {{/with}}

                <div class="pt-5">
                  <h6 class="mb-0"><a href="/" class="text-body"><i
                        class="fas fa-long-arrow-alt-left me-2"
                      ></i>Back to shop</a></h6>
                </div>
              </div>
            </div>

            <div
              class="col-lg-3 col-sm-12 col-12 p-4 mt-5 border border-1"
