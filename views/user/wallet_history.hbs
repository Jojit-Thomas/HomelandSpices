<section class="container-fluid">
  <h1 class="text-center mb-5">Wallet History</h1>
  <div class="table-container">
    <div class="pe-5 mb-3 flexible_container  mt-4">
      <div class="row ge-5 card_container justify-content-between" style="height: 10rem;">
        <div class="col-12 col-lg-4 col-sm-4  info_card_container mt-4 mt-sm-0"><div style="background-color: #56AAF2;" class="card h-100"><div class="d-flex h-100"><div class="w-50 d-flex flex-column justify-content-center text-white"><i class="fa-solid fa-cart-shopping fs-4 ps-3"></i><span class="ps-3 mt-3 fs-5">Total Credit</span></div>
        <div class="w-50 text-white d-flex flex-column justify-content-center"><span class="m-auto" id="order_count" style="font-size: 4rem;">{{wallet.total_credit}}</span></div></div></div></div>
        <div class="col-12 col-lg-4 col-sm-4  info_card_container mt-4 mt-sm-0"><div style="background-color: #F5A752;" class="card h-100"><div class="d-flex h-100"><div class="w-50 d-flex flex-column justify-content-center text-white"><i class="fa-solid fa-truck fs-4 ps-3"></i><span class="ps-3 mt-3 fs-5">Total Debit</span></div>
        <div class="w-50 text-white d-flex flex-column justify-content-center"><span class="m-auto" id="dispatch_count" style="font-size: 4rem;">{{wallet.total_debit}}</span></div></div></div></div>
        <div class="col-12 col-lg-4 col-sm-4  info_card_container mt-4 mt-sm-0"><div style="background-color: #77CEBB;" class="card h-100"><div class="d-flex h-100"><div class="w-50 d-flex flex-column justify-content-center text-white"><i class="fa-solid fa-user fs-4 ps-3"></i><span class="ps-3 mt-3 fs-5">Current Balance</span></div>
        <div class="w-50 text-white d-flex flex-column justify-content-center"><span class="m-auto" id="user_count" style="font-size: 4rem;">{{wallet.current_balance}}</span></div></div></div></div>
      </div>
    </div>
    <table class="table mt-4 p-4">
      <thead class="bg-white">
        <tr>
          <th scope="col" class="m-auto text-center align-middle">S.no</th>
          {{! <th scope="col" class="m-auto text-center align-middle">Name</th> }}
          <th scope="col" class="m-auto text-center align-middle">Description</th>
          <th scope="col" class="m-auto text-center align-middle">Date</th>
          <th scope="col" class="m-auto text-center align-middle">Discount â‚¹</th>
        </tr>
      </thead>
      <tbody class="mt-3 m-auto text-center align-middle" id="table">
        {{#each wallet.wallet}}
          <tr class="bg-white" >
            {{#ifCond this.amount '>' '0'}}
            <th class="text-success fw-bolder" scope="row">{{inc @index}}</th>
            <td class="title text-success fw-bolder">{{this.title}}</td>
            <td class="text-success fw-bolder">{{this.date}}</td> 
            <td class="text-success fw-bolder">+ {{this.amount}}</td> 
            {{else}}
            <th class="text-danger fw-bolder" scope="row">{{inc @index}}</th>
            <td class="title text-danger fw-bolder">{{this.title}}</td>
            <td class="text-danger fw-bolder">{{this.date}}</td> 
            <td class="text-danger fw-bolder">{{this.amount}}</td> 
            {{/ifCond}}
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>

