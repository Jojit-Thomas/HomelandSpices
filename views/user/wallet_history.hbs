<style>
  .table> :not(:last-child)> :last-child>* {
  border: none !important;
}

.h6-none {
  margin: 0 !important;
}

.nos {
  font-size: 0.625rem;
  font-weight: 500;
}

.search {
  width: 70%;
  border-radius: 0.4rem;
  border: 1px solid #5541db;
}

table {
  display: table;
  border-spacing: 0px 0.2rem;
  border-collapse:
    separate;
}

table .desc,
table .title {
  width: 18%;
}

.table-container {
  width: 100%;
  overflow: scroll;
}
body {
  background-color: var(--white_lilac) !important;
}
</style>

<section class="container-fluid">
  <h1 class="text-center mb-5">Wallet History</h1>
  <div class="table-container">
    <div class="d-flex">
      <h1 class="mx-5">Total Credit : {{wallet.total_credit}}</h1>
      <h1 class="mx-5">Total Debit : {{wallet.total_debit}}</h1>
      <h1 class="mx-5">Current Balance : {{wallet.current_balance}}</h1>
    </div>
    <table class="table mt-4 p-4">
      <thead class="bg-white">
        <tr>
          <th scope="col" class="m-auto text-center align-middle">S.no</th>
          {{! <th scope="col" class="m-auto text-center align-middle">Name</th> }}
          <th scope="col" class="m-auto text-center align-middle">Description</th>
          <th scope="col" class="m-auto text-center align-middle">Date</th>
          <th scope="col" class="m-auto text-center align-middle">Discount â‚¹</th>
        </tr>
      </thead>
      <tbody class="mt-3 m-auto text-center align-middle" id="table">
        {{#each wallet.wallet}}
          <tr class="bg-white" >
            {{#ifCond this.amount '>' '0'}}
            <th class="text-success fw-bolder" scope="row">{{inc @index}}</th>
            <td class="title text-success fw-bolder">{{this.title}}</td>
            <td class="text-success fw-bolder">{{this.date}}</td> 
            <td class="text-success fw-bolder">+ {{this.amount}}</td> 
            {{else}}
            <th class="text-danger fw-bolder" scope="row">{{inc @index}}</th>
            <td class="title text-danger fw-bolder">{{this.title}}</td>
            <td class="text-danger fw-bolder">{{this.date}}</td> 
            <td class="text-danger fw-bolder">{{this.amount}}</td> 
            {{/ifCond}}
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>

