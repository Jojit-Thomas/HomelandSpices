<link rel="stylesheet" href="/stylesheets/login.css" />

<div class="container mt-4">
  <div class="row d-flex justify-content-center">
    <form
      action="/admin/banners/add"
      id="addProduct"
      method="post"
      enctype="multipart/form-data"
      class="loginBox col-md-6"
    >
      <input
        type="text"
        class="w-100 p-2 m-2 form-control"
        name="title"
        placeholder="Title"
      />
      <input type="file" class="w-100 p-2 m-2 form-control" style="height: 50vh;" name="image" />
      
      <input type="submit" class="btn btn-success p-2 m-2 w-100" />
    </form>
  </div>
</div>


