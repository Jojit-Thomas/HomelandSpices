{{#with product}}
  <div class="container mt-4">
    <div class="row d-flex justify-content-center">
      <form
        action="/admin/product/edit/{{_id}}?img_ext={{img_ext}}"
        method="post"
        enctype="multipart/form-data"
        id="editProduct"
        class="loginBox col-md-6"
      >
        <input required
          type="text"
          class="w-100 p-2 m-2 form-control"
          name="title"
          placeholder="Title"
          value="{{title}}"
        />
        <input required
          type="text"
          class="w-100 p-2 m-2 form-control"
          name="description"
          placeholder="Description"
          value="{{desc}}"
        />
        <select class="w-100 p-2 m-2 form-select" name="category" aria-label="Default select example">
          <option selected value="{{category_details.[0]._id}}">{{category_details.[0].title}}</option>
          {{#each ../categories}}
          <option value="{{this._id}}">{{this.title}}</option>
          {{/each}}
        </select>
        <input required 
          type="text"
          class="w-100 p-2 m-2 form-control"
          name="price"
          placeholder="Price"
          value="{{price}}"
        />
        <input required
          type="number"
          class="w-100 p-2 m-2 form-control"
          name="max_price"
          placeholder="Max Price"
          value="{{max_price}}"
        />
        <input required
          type="number"
          class="w-100 p-2 m-2 form-control"
          name="discount"
          placeholder="Discount % "
          value="{{discount}}"
        />
        <input required
          type="number"
          class="w-100 p-2 m-2 form-control"
          name="stocks"
          placeholder="Total Stocks"
          value="{{stocks}}"
        />
        <img
          src="/product_images/{{_id}}.{{img_ext}}"
          alt=""
          width="50px"
          srcset=""
        />
        <input  type="file" class="w-100 p-2 m-2 form-control" name="image" />
        <input type="submit" value="submit" class="btn btn-success p-2 m-2 float-end" />
      </form>
    </div>
  </div>
{{/with}}
{{! <script src="/javascripts/admin/edit_product.js"></script> }}